<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    android:id="@+id/layoutItemCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="same_level"
    app:dragEdge="right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    >

    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/deleteItemCart"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="match_parent" >
        <ImageView
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_trash"
            />
    </LinearLayout>

    <!-- Your main layout here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgItemCart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            />
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/txtNameItemCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@id/layoutQuantity"
                    android:text="Name Food"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    />
                <LinearLayout
                    android:id="@+id/layoutQuantity"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btn_AddQuantityItemCart"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        />
                    <TextView
                        android:id="@+id/txtQuantityItemCart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="18sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        />
                    <ImageButton
                        android:id="@+id/btn_MinusQuantityItemCart"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_minus"

                        />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtPriceItemCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price Food"
                android:textSize="15sp"
                android:textColor="#FA0303"
                />
            <TextView
                android:id="@+id/txtDescriptionItemCart"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                />

        </LinearLayout>

    </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
